{% comment %}
  Customer Service Section with Main Image Picker and Sub Section Images
{% endcomment %}

<div class="customer-service-section">
  {% if section.settings.main_image %}
    {{ section.settings.main_image | image_url: width: 1000 | image_tag: class: 'section-main-image', alt: 'Main Section Image' }}
  {% endif %}
  
  <h2>{{ section.settings.title }}</h2>
  <p class="subtitle">{{ section.settings.subtitle | newline_to_br }}</p>
  
  <div class="team-images">
    {% assign sub_images = "sub_image1,sub_image2,sub_image3,sub_image4" | split: ',' %}
    {% for sub_image in sub_images %}
      {% assign image_url = section.settings[sub_image] %}
      {% if image_url %}
        <div class="team-member"> 
          {{ image_url | image_url: width: 80 | image_tag: class: 'slider-top-image-img', alt: 'Team member' }}
        </div>
      {% else %}
        <p>No image provided</p>
      {% endif %}
    {% endfor %}
  </div>


  <div class="features">
      <div class="feature">
        {% assign feature_text = section.settings.feature_text1 %}
        {% render 'call-center-icon-home-page' %}
        <p>{{ feature_text | newline_to_br }}</p>
      </div>

      <div class="feature">
          {% assign feature_text = section.settings.feature_text2 %}
          {% render 'support-message-icon-home-page' %}
          <p>{{ feature_text | newline_to_br }}</p>
        </div>

        <div class="feature">
          {% assign feature_text = section.settings.feature_text3 %}
          {% render 'schedule-bell-icon-home-page' %}
          <p>{{ feature_text | newline_to_br }}</p>
        </div>

        <div class="feature">
          {% assign feature_text = section.settings.feature_text4 %}
          {% render 'communication-file-icon-home-page' %}
          <p>{{ feature_text | newline_to_br }}</p>
        </div>
    
  </div>
</div>

<style>

.customer-service-section {
  box-sizing: border-box;
  text-align: center;
  background-color: #fcfcfc;
  margin: 0px;
  padding: 40px 0px;
}

.customer-service-section .section-main-image {
  max-width: 100%;
  height: auto;
  margin-bottom: 20px;
}

.customer-service-section h2 {
  font-size: 32px;
  font-weight: 500;
  margin-bottom: 10px;
}

.customer-service-section .subtitle {
  font-size: 16px;
  color: #666;
  margin-bottom: 30px;
}

.team-images {
  display: flex;
  justify-content: center;
  margin-bottom: 30px;
  width: 100vw;
  margin-left: 0px;
  gap: 10rem;
}

.team-member img {
  width: 120px;
  height: 120px;
  border-radius: 50%;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.features {
  display: flex;
  justify-content: center;
  align-items: flex-start;
  margin-top: 20px;
  gap: 4rem;
}

.feature {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.feature img.feature-icon {
  width: 46px;
  height: 46px;
  margin-bottom: 10px;
}

.feature i {
  font-size: 24px;
  margin-bottom: 10px;
}

.feature p {
  font-size: 12px;
  color: #333;
  line-height: 18px;
  font-weight: 500;
}
</style>

