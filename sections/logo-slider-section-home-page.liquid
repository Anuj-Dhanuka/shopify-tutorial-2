<style>
    .lsshp-container {
        display: flex;
        overflow: hidden;
        position: relative;
        padding: 12px 0;
    }
  
    .lsshp-scroll {
        display: flex;
        gap: 16px;
        animation: scroll 15s linear infinite;
    }
  
    .logo-item img {
        height: 70px;
        object-fit: contain;
    }
  
    @keyframes scroll {
        0% {
            transform: translateX(0);
        }
        100% {
            transform: translateX(-50%);
        }
    }
  </style>
  
  <div class="lsshp-container">
      <div class="lsshp-scroll">
          {% for block in section.blocks %}
            <div class="logo-item">
              {% if block.settings.image_settings %}
                  {{ block.settings.image_settings | image_url: height: 70 | image_tag }}
              {% endif %}
            </div>
          {% endfor %}
  
          {% for block in section.blocks %}
            <div class="logo-item">
              {% if block.settings.image_settings %}
                  {{ block.settings.image_settings | image_url: height: 70 | image_tag }}
              {% endif %}
            </div>
          {% endfor %}
      </div>
  </div>
  
  {% schema %}
  {
      "name": "Logos Slider Section",
      "settings": [],
      "blocks": [
          {
              "type": "image",
              "name": "Image",
              "settings": [
                  {
                      "type": "image_picker",
                      "label": "Upload Image",
                      "id": "image_settings"
                  }
              ]
          }
      ],
      "presets": [
          {
              "name": "Logos Slider Section",
              "category": "Custom Section"
          }
      ]
  }
  {% endschema %}
  